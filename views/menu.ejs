<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1>Full Menu</h1>
  <h2>Mains</h2>
  <% restaurant.menu.filter(item => item.category === 'mains').forEach(item => { %>
    <p><%= item.name %> - $<%= item.price.toFixed(2) %></p>
    <p>Rating: <%= item.rating %></p>
    <p><%= item.details %></p>
  <% }) %>

  <h2>Desserts</h2>
  <% restaurant.menu.filter(item => item.category === 'desserts').forEach(item => { %>
    <p><%= item.name %> - $<%= item.price.toFixed(2) %></p>
    <p>Rating: <%= item.rating %></p>
    <p><%= item.details %></p>
  <% }) %>

  <h2>Sides</h2>
  <% restaurant.menu.filter(item => item.category === 'sides').forEach(item => { %>
    <p><%= item.name %> - $<%= item.price.toFixed(2) %></p>
    <p>Rating: <%= item.rating %></p>
    <p><%= item.details %></p>
  <% }) %>
</body>
</html>
